<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical" >

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:indeterminate="false"
        android:indeterminateOnly="false" />

    <TextView
        android:id="@+id/txt_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/progress"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/item_size" />

    <RelativeLayout
        android:id="@+id/layout_root"
        android:layout_width="@dimen/paint_width"
        android:layout_height="@dimen/paint_width"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/image_center"
            android:layout_width="@dimen/play_width"
            android:layout_height="@dimen/play_width"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/circle" />

        <RelativeLayout
            android:id="@+id/item1"
            android:layout_width="@dimen/view_width"
            android:layout_height="@dimen/view_width"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/view_width_margin" >

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/item_size" />

            <ImageView
                android:id="@+id/img1"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/amination_red" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item2"
            android:layout_width="@dimen/view_width"
            android:layout_height="@dimen/view_width"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/view_width_margin" >

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/item_size" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:rotation="-90"
                android:src="@drawable/amination_red" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item3"
            android:layout_width="@dimen/view_width"
            android:layout_height="@dimen/view_width"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_width_margin" >

            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/item_size" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:rotation="180"
                android:src="@drawable/amination_red" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item4"
            android:layout_width="@dimen/view_width"
            android:layout_height="@dimen/view_width"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_width_margin" >

            <TextView
                android:id="@+id/txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/item_size" />

            <ImageView
                android:id="@+id/img4"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:layout_alignParentLeft="true"
                 android:layout_centerVertical="true"
                android:rotation="90"
                android:src="@drawable/amination_red" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>